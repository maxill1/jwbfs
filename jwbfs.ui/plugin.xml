<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="jwbfs.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="jwbfs.ui.Perspective"
            id="jwbfs.ui.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="jwbfs.ui.application"
            name="jwbfs">
         <property
               name="appName"
               value="jwbfs">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="jwbfs.ui.views.MainView"
            id="jwbfs.ui.view"
            name="MainView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="jwbfs.ui.commands.category.convert"
            name="Convert">
      </category>
      <command
            categoryId="jwbfs.ui.commands.category.convert"
            id="jwbfs.ui.commands.toWbfs"
            name="Iso To wbfs">
      </command>
      <command
            categoryId="jwbfs.ui.commands.category.convert"
            id="jwbfs.ui.commands.toIso"
            name="Wbfs To Iso">
      </command>
      <command
            categoryId="jwbfs.ui.commands.category.convert"
            id="jwbfs.ui.commands.checkDisk"
            name="Check Disk">
      </command>
      <command
            categoryId="jwbfs.ui.commands.category.convert"
            id="jwbfs.ui.commands.fileDialog"
            name="File Dialog">
      </command>
      <command
            categoryId="jwbfs.ui.commands.category.convert"
            id="jwbfs.ui.commands.folderDialog"
            name="Folder Dialog">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="jwbfs.ui.handlers.ToWBFSConvertHandler"
            commandId="jwbfs.ui.commands.toWbfs">
      </handler>
      <handler
            class="jwbfs.ui.handlers.ToISOConvertHandler"
            commandId="jwbfs.ui.commands.toIso">
      </handler>
      <handler
            class="jwbfs.ui.handlers.CheckDiscHandler"
            commandId="jwbfs.ui.commands.checkDisk">
      </handler>
      <handler
            class="jwbfs.ui.handlers.FileDialogHandler"
            commandId="jwbfs.ui.commands.fileDialog">
      </handler>
      <handler
            class="jwbfs.ui.handlers.FolderDialogHandler"
            commandId="jwbfs.ui.commands.folderDialog">
      </handler>
   </extension>
  
</plugin>
